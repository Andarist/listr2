{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@interfaces": ["./src/interfaces"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@renderer": ["./src/renderer"],
      "@renderer/*": ["./src/renderer/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@tests/*": ["./tests/*"],
      "@root": ["./src/index"],
      "@root/*": ["./src/*"]
    }
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["../src", "../examples"],
  "exclude": ["node_modules", "dist"]
}
