{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "module": "Node12",
    "outDir": "./dist",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "paths": {
      "@root/*": ["./*"],
      "@constants/*": ["constants/*"],
      "@interfaces/*": ["interfaces/*"],
      "@lib/*": ["lib/*"],
      "@renderer/*": ["renderer/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
