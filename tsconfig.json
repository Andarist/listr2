{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "paths": {
      "@root": ["./index"],
      "@root/*": ["./*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@renderer": ["renderer"],
      "@renderer/*": ["renderer/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
