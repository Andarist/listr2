{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "paths": {
      "@constants": ["./constants"],
      "@constants/*": ["./constants/*"],
      "@interfaces": ["./interfaces"],
      "@interfaces/*": ["./interfaces/*"],
      "@lib": ["./lib"],
      "@lib/*": ["./lib/*"],
      "@presets": ["./presets"],
      "@presets/*": ["./presets/*"],
      "@renderer": ["./renderer"],
      "@renderer/*": ["./renderer/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@root": ["./index"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
