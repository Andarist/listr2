{
  "extends": "../tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "sourceMap": true,
    "paths": {
      "@root/*": ["./src/*"],
      "@constants/*": ["src/constants/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@lib/*": ["src/lib/*"],
      "@renderer/*": ["src/renderer/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["../src", "../tests"],
  "exclude": ["node_modules", "dist"]
}
